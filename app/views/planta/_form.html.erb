

<%= simple_form_for(@plantum , :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs" id="huerto">

    <div class="row">
	    <div class="span3">
			<div class="control-group">				
				<%= f.input :agrupacion_id, :as => :hidden, :value=> @plantum.agrupacion_id  %>
			    <%= f.input :nombre %>
			    <%= f.input :razonsocial %>
			    <%= f.input :cif %>
			    <%= f.input :cups %>
			    <%= f.input :potencia %>
			    <%= f.input :produccion %>
	   		</div>
	    </div>
  </div>
    </div>
  <div class="form-actions">
  	
    <%= f.button :submit, "Actualizar Planta", class:"btn-primary" %>
  </div>

<% end %>
