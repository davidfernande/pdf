					</div>
					</script>
						</div>
				    	<div class="span2">
							<% if @huerto.foto02 %>
							<div><span></span><span><img id="img022" height="42" src="<%=@huerto.foto02%>"></img></span></div>
							<% else %>
							<div><span></span><span><img id="img022" height="40" src="https://s3-eu-west-1.amazonaws.com/yelou/huertos/solautofes/4983425-paneles-solares-en-la-planta-de-energia-para-la-energia-renovable.jpg"></img></span></div>
							<% end %>
						</div>						
					</div>					
			    	<div class="row">
				    	<div class="span2">
					<%= s3_uploader_form  callback_param: "model[image_url]", id: "s3-uploader03" do %>
					  <%= file_field_tag :file, multiple: false %>  
					<% end %><span id="spanfile03">...</span>
					
					<script id="template-upload" type="text/x-tmpl">
					<div id="file-{%=o.unique_id%}" class="upload">
					  Cargando el archivo: {%=o.name%}
					  <div class="progress"><div class="bar" style="width: 0%"></div></div>
					</div>
					</script>					
						</div>
				    	<div class="span2">
							<% if @huerto.foto03 %>
							<div><span></span><span><img id="img033" height="42" src="<%=@huerto.foto03%>"></img></span></div>
							<% else %>
							<div><span></span><span><img id="img033" height="40" src="https://s3-eu-west-1.amazonaws.com/yelou/huertos/solautofes/4983425-paneles-solares-en-la-planta-de-energia-para-la-energia-renovable.jpg"></img></span></div>
							<% end %>
						</div>						
					</div>					
					
			    </div>
			    <div class="modal-footer">
			    <button class="btn" data-dismiss="modal" aria-hidden="true">Cerrar</button>
			    </div>
			    </div>
		    

