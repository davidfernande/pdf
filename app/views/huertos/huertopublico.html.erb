<script>
handler = Gmaps.build('Google');
handler.buildMap({ provider: { mapTypeId: "hybrid", zoom: 16 }, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers([
    {
      "lat": <%= @huerto.y %>,
      "lng": <%= @huerto.x %>,
      "picture": {
        "url": "http://75.101.167.227/sites/all/themes/tb_sirate/js/img/LABELMAPA3034.png",
        "width":  30,
        "height": 34        
      }
    }
  ]);
  handler.bounds.extendWith(markers);
  handler.map.centerOn({ lat: <%= @huerto.y %>, lng: <%= @huerto.x %> })
});
</script>
