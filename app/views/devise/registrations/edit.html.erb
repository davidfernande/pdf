<h2>Editar Cuenta</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-horizontal', :id => "form_id" }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  <%= f.input :name, :autofocus => true, label: 'Nombre' , :input_html => { :class => 'span3 validate[required] input-xlarge'} %>
  <%= f.input :email, :required => true,  label: 'email', :input_html => { :class => 'span3 validate[required] input-xlarge'} %>
  <%= f.input :password, :autocomplete => "off",label: 'Nueva Contraseña', :hint => "Déjala en blanco si no la quieres cambiar", :required => false %>
  <%= f.input :password_confirmation, label: 'Confirmación de Contraseña', :required => false %>
  <%= f.input :current_password, label: 'Contraseña actual', :hint => "Necesitamos tu contraseña actal para confirmar los cambios", :required => true %>
  <%= f.button :submit, 'Actualizar', :class => 'btn-primary' %>
<% end %>
<h3>Cancelar mi cuenta</h3>
<p>No estás contento? <%= link_to "Cancelar mi cuenta", registration_path(resource_name), :data => { :confirm => "Seguro?" }, :method => :delete %>.</p>
<%= link_to "Volver", :back %>


        
