<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }, :id => "form_id" ) do |f| %>


			<form class="form-horizontal" action='' method="POST">
			  <fieldset>
			    <div id="legend">
			      <h2 class="titulo">Cambiar la contraseña</h2>
			    </div>
			    <div class="control-group">
			    	  <%= f.error_notification %>
			    	  <%= display_base_errors resource %>
  					  <%= f.input :reset_password_token, :as => :hidden %>
  				      <%= f.full_error :reset_password_token %>  
				      <%= f.input :password, :label => "Nueva Contraseña", :required => true, :autofocus => true %>
				      <%= f.input :password_confirmation, :label => "Confirma la nueva contraseña", :required => true %>		      
			      <div class="controls">
			      	 <%= f.button :submit, "Guardar", :class => 'btn-primary btn-success' %>
			      	 
			      </div>
			      <%= render "devise/shared/links" %>
			    </div>
			  </fieldset>
			</form>

<% end %>